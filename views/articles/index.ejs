<h2 style="margin-top: 60px">Stored articles</h2>



<div class="container">

    <% articles.forEach((article) => { %>
        <div class="row" style="margin-bottom:2.0em">
    <div class="col-lg-12">
      <img src="<%= article.images %>" class="img-responsive imageStored" style="margin-top: 2.0em">
      <h2><%= article.name %></h2>
      <p><%= article.content %></p>
      </br>


      <div class="container button-container" style="margin-top: 2.0em; padding-bottom: 4.0em;">
        <div class="row">
          <div class="col-lg-4">
          <a href="/articles/<%= article.id %>/edit" class="btn btn-secondary btn-lg btn-block">Edit</a>
          </div>

          <div class="col-lg-4">
          <a href="/articles/<%= article.id %>/" class="btn btn-secondary btn-lg btn-block">Show</a>
          </div>
          <div class="col-lg-4">
          <form method="POST" action="/articles/<%= article.id %>">
            <input type="hidden" name="_method" value="DELETE">
            <button class="btn btn-secondary btn-lg btn-block">Delete</button>
              </form>
          </div>
        </div>
      </div>
      </div
    </div>
  </div>
  <% }) %>

</div>

